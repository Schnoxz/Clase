			boolean letras = true;
			
			if (usuario.length() > 30 || usuario.length() < 0) {
				letras = false;
			} else {
				// Compruebo que las todos los caracteres sean letras via contador
				for (int i = 0; i < usuario.length(); i++) {
					if (!Character.isLetter(usuario.charAt(i))) {
						
					}
				}
			}
		} while (!usrValido);
	}
}

